---
<Base title={title} description={description} hideSide={hideSide} hideMenu={hideMenu}>
	{heroImage && <img class="hero-image" src={heroImage} alt="" />}
	<article class:list={["typo article",mode]}>
	{enableRemote && filePath && <a href={getEditURL(filePath)} target="_blank" style="margin: 6px 0;display: inline-block;">在源文件编辑</a>}
	{enableRemote && filePath && <hr>}
		<slot />
	</article>
    <link is:raw rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
    <script is:raw src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
    <div id="gitalk-container" style="padding: 25px;box-sizing: border-box;"></div>
    <script is:raw>
        var gitalk = new Gitalk({
            clientID: '159640417e68f64450cd',
            clientSecret: '110efc6c4598048ad0d38f420b484c6d5a24bcad',
            repo: 'PureWiki',
            owner: 'ListenMoon',
            admin: ['npmrun'],
            id: location.pathname,      // Ensure uniqueness and length less than 50
            distractionFreeMode: false  // Facebook-like distraction free mode
        })
        gitalk.render('gitalk-container')    
    </script>
	<HeadTree slot="side" head={_head}></HeadTree>
</Base>
